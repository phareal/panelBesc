{% extends 'app/vgm/index.html.twig' %}

{% block content %}
    <div class="block-header">
        <div class="row">
            <div class="col-lg-7 col-md-6 col-sm-12">
                <h2>Dashboard</h2>
                <ul class="breadcrumb">
                    <li class="breadcrumb-item">
                        <a href="index.html"><i class="zmdi zmdi-home"></i> Gestion des agents consignataires</a>
                    </li>
                    <li class="breadcrumb-item active">Creation des agents</li>
                </ul>
            </div>
            <div class="col-lg-5 col-md-6 col-sm-12">
                <button class="btn btn-success btn-icon float-right" data-toggle="modal" data-target="#addUserToModule"
                        type="button">
                    <i class="zmdi zmdi-account-add"></i>
                </button>
            </div>
        </div>
    </div>
    <div class="container-fluid">
        <div class="row clearfix">
            <div class="col-lg-12 col-md-12 col-sm-12">
                <div class="card">
                    <div class="header">
                        <h2>Ajout d'un agent<strong>validateur</strong></h2>

                    </div>
                    <div class="body">
                        <form action="">
                            <div class="form-group">
                                <div class="row">
                                    <label for="" class="col-form-label col-sm-6">
                                        Nom d'utilisateur
                                    </label>
                                    <input type="text" class="form-control col-sm-6" id="password">
                                </div>

                            </div>
                            <div class="form-group">
                                <div class="row">
                                    <label for="" class="col-sm-6">
                                        Mot de passe
                                    </label>
                                    <input type="text" class="form-control col-sm-6" id="password">
                                </div>

                            </div>
                            <div class="form-group">
                                <div class="row">
                                    <label for="" class="col-sm-6">
                                        Selectionnez le role de l'utilisateur
                                    </label>
                                    <select class="form-control col-sm-6">
                                        <option value="" default>Veuillez selectionnez le role de l'utilisateur</option>
                                        {% for role in roles  %}
                                            <option value="{{ role.id }}">{{ role.label }}</option>
                                        {% endfor %}
                                    </select>
                                </div>

                            </div>
                            <div class="form-group">
                                <button class="btn btn-success" type="submit">Ajouter
                                    <i class="zmdi zmdi-account-add"></i>
                                </button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>


{% endblock %}
