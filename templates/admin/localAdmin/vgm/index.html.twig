{% extends 'admin/layout.html.twig' %}
{% block sidebar %}
    <aside id="leftsidebar" class="sidebar">
        <div class="navbar-brand">
            <button class="btn-menu ls-toggle-btn" type="button"><i class="zmdi zmdi-menu"></i></button>
            <a href="#">
                <span class="m-l-10">Panel Gestion</span>
            </a>
        </div>
        <div class="menu">
            <div class="slimScrollDiv" style="position: relative; overflow: hidden; width: auto; height: calc(100vh - 65px);"><ul class="list" style="overflow: hidden; width: auto; height: calc(100vh - 65px);">
                    <li>
                        <div class="user-info">
                            <a class="image waves-effect waves-block" href="#">
                                <img src="{{ asset('assets/images/account.png') }}" alt="User">
                            </a>
                            <div class="detail">
                                <h6> <small> {{ app.user.username }}</small></h6>
                                <small>{{ app.user.role.label }}</small>
                            </div>
                        </div>
                    </li>
                    <li class="active open">
                        <a href="{{ path('dashboard-su:index') }}" class="toggled waves-effect waves-block">
                            <i class="zmdi zmdi-home"></i><span>Dashboard</span></a>
                    </li>
                    <li>
                    <li class="open">
                        <a href="{{ path('dashboard-su:index') }}" class="toggled waves-effect waves-block">
                            <i class="zmdi zmdi-accounts-list"></i><span>Autres admins</span></a>
                    </li>
                    <li class="open">
                        <a href="{{ path('dashboard-su:index') }}" class="toggled waves-effect waves-block">
                            <i class="zmdi zmdi-accounts-list"></i><span>Conteneurs</span></a>
                    </li>
                    <li class="open">
                        <a href="{{ path('dashboard-su:index') }}" class="toggled waves-effect waves-block">
                            <i class="zmdi zmdi-view-list-alt"></i><span>VGM</span></a>
                    </li>
                    <li>
                </ul>
            </div>
        </div>
    </aside>
{% endblock %}
{% block content %}
    <div class="block-header">
        <div class="row">
            <div class="col-lg-7 col-md-6 col-sm-12">
                <h2>Dashboard</h2>
                <ul class="breadcrumb">
                    <li class="breadcrumb-item">
                        <a href="index.html"><i class="zmdi zmdi-home"></i> Gestion</a>
                    </li>
                    <li class="breadcrumb-item active">Parametres du vgm</li>
                </ul>
                <button class="btn btn-primary btn-icon mobile_menu" type="button"><i
                            class="zmdi zmdi-sort-amount-desc"></i></button>
            </div>
            <div class="col-lg-5 col-md-6 col-sm-12">
                <button class="btn btn-success btn-icon float-right" data-toggle="modal" data-target="#addUserToModule"
                        type="button">
                    <i class="zmdi zmdi-account-add"></i>
                </button>
            </div>
        </div>
    </div>

    <div class="container-fluid">
        <div class="row clearfix">
            <div class="col-lg-4 col-md-6 col-sm-6">
                <div class="card w_data_1">
                    <div class="body">
                        <div class="w_icon indigo"><i class="zmdi zmdi-settings"></i></div>
                        <h4 class="mt-3">45.8k</h4>
                        <span class="text-muted">Nombre total de VGM</span>
                    </div>
                </div>
            </div>
            <div class="col-lg-4 col-md-6 col-sm-6">
                <div class="card w_data_1">
                    <div class="body">
                        <div class="w_icon pink"><i class="zmdi zmdi-bug"></i></div>
                        <h4 class="mt-3">12.1k</h4>
                        <span class="text-muted">Nombre d'admin</span>
                    </div>
                </div>
            </div>
            <div class="col-lg-4 col-md-6 col-sm-6">
                <div class="card w_data_1">
                    <div class="body">
                        <div class="w_icon orange"><i class="zmdi zmdi-shopping-cart"></i></div>
                        <h4 class="mt-3">53.8k</h4>
                        <span class="text-muted">Nombre totales de conteneur</span>
                    </div>
                </div>
            </div>
        </div>
    </div>

{% endblock %}

